# Maintainer: Truong Vu <wanwan.vxt@gmail.com>
pkgname=megumi-shell
pkgver=0.0.1
pkgrel=1
pkgdesc="Desktop shell for Hyprland, built with Quickshell"
arch=('any')
license=('MIT')

depends=(
    'hyprland'
    'quickshell'
)

package() {
    cd "$srcdir"

    install -dm755 "$pkgdir/etc/xdg/quickshell/megumi-shell"
    cp -r ./* "$pkgdir/etc/xdg/quickshell/megumi-shell/"
}
